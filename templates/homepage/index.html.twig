{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <table>
        <th>Les plus récents</th>

        <tr>
            <td>Nom</td>
            <td>Date de création</td>
        </tr>

            {% for product in mostRecentProduct %}
            <tr>
                <td><a href="{{ path('product.show', {id : product.id}) }}">{{product.name}}</a></td>
                <td>{{product.createdAt|date('d-m-y')}}</td>
            </tr>
            {% endfor %}
    
    </table>

    <table>
        <th>Les moins chers</th>

        <tr>
            <td>Nom</td>
            <td>Prix</td>
        </tr>

            {% for product in mostCheapestProduct %}
            <tr>
                <td><a href="{{ path('product', {id : product.id}) }}">{{product.name}}</a></td>
                <td>{{product.price}} €</td>
            </tr>
            {% endfor %}
    
    </table>

{% endblock %}
